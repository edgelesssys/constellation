go_library(
    name = "server",
    srcs = ["server.go"],
    importpath = "github.com/edgelesssys/constellation/v2/verify/server",
    visibility = ["//visibility:public"],
    deps = [
        "//internal/constants",
        "//internal/logger",
        "//verify/verifyproto",
