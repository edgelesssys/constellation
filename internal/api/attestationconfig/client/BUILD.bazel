load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//bazel/go:go_test.bzl", "go_test")

go_library(
    name = "client",
    srcs = ["client.go"],
    importpath = "github.com/edgelesssys/constellation/v2/internal/api/attestationconfig/client",
    visibility = ["//:__subpackages__"],
