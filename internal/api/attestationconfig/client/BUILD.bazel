go_test(
    name = "client_test",
    srcs = ["client_test.go"],
    # keep
    count = 1,
    embed = [":client"],
    # keep
    gotags = ["e2e"],
    # keep
    tags = ["manual"],
    deps = [
        "//internal/api/attestationconfig",
        "@com_github_stretchr_testify//assert",
    ],
